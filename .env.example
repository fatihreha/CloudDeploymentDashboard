# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True

# Database Configuration (Using Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_KEY=SUPABASE_SERVICE_KEY_HERE

# DigitalOcean Configuration (GitHub Education Pack - $200 Credit)
DIGITALOCEAN_ACCESS_TOKEN=DIGITALOCEAN_TOKEN_HERE

# Alternative Cloud Providers (GitHub Education Pack)
# Heroku
HEROKU_API_KEY=HEROKU_API_KEY_HERE

# Google Cloud Platform ($300 Credit)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=GCP_PROJECT_ID_HERE

# Microsoft Azure ($100 Credit)
AZURE_SUBSCRIPTION_ID=AZURE_SUBSCRIPTION_ID_HERE
AZURE_CLIENT_ID=AZURE_CLIENT_ID_HERE
AZURE_CLIENT_SECRET=AZURE_CLIENT_SECRET_HERE
AZURE_TENANT_ID=AZURE_TENANT_ID_HERE

# MongoDB Atlas (Free Tier)
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE_NAME

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Application Settings
APP_NAME=Cloud Deployment Dashboard
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
JWT_SECRET_KEY=JWT_SECRET_KEY_HERE

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=EMAIL_USERNAME_HERE
MAIL_PASSWORD=EMAIL_PASSWORD_HERE

# Webhook Configuration
GITHUB_WEBHOOK_SECRET=GITHUB_WEBHOOK_SECRET_HERE
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/WORKSPACE/CHANNEL/TOKEN

# Performance Settings
WORKERS=4
TIMEOUT=30
MAX_CONNECTIONS=1000